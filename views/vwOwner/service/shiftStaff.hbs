{{#section 'css'}}
<style>
    .input-box{
        margin-bottom: 15px;
        height: auto;
        width: 100%;
    }
    .input-box input, input[readonly]{
        width: 100%;
        margin-top: 5px;
        border: 1px solid white; /* thêm độ dày */
        border-radius: 5px;        /* thêm giá trị hợp lệ */
        padding: 10px;
        background-color: #edebc6 !important; 
        color: black;            /* chống chữ bị mờ */
        cursor: pointer; 
    }
    #inputGroupSelect01{
        width: 100% !important;
        border: 1px solid #F3EC1C !important; /* thêm độ dày */
        border-radius: 5px !important;        /* thêm giá trị hợp lệ */
        padding: 10px !important;
        background-color: white !important; 
        color: black !important;            /* chống chữ bị mờ */
        cursor: pointer; 
    }
    .input-box span{
        font-weight: bold;
    }
    .scrollbar-none {
      -ms-overflow-style: none; /* IE/Edge */
      scrollbar-width: none;    /* Firefox */
    }
  
    .scrollbar-none::-webkit-scrollbar {
      display: none;            /* Chrome, Safari, Opera */
    }
</style>
{{/section}}
<div style="background: linear-gradient(135deg, #FF94BD, #F3EC1C); overflow: scroll;" 
class=" tw-h-max-full tw-overflow-y-scroll tw-h-full tw-w-full tw-border-black tw-py-[5%] tw-scrollbar-none">
<form id="frmShift" action="/owner/manageService/shift-staff?id={{id}}" class="tw-bg-white tw-p-5 tw-rounded-md tw-mx-auto tw-max-w-lg tw-border-2 tw-border-black"  method="POST" >
    <div class="tw-flex tw-flex-col tw-justify-between tw-px-3 tw-pb-[20%] tw-w-auto tw-h-[100%] tw-max-h-max tw-overflow-y-scroll" style="overflow: scroll; scrollbar-width: none;">
    <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-yellow-300">Shift your staff</h2>
    <input id="bookedServiceId" name="bookedServiceId" value="{{bookedService._id}}" hidden>
    <div class="input-box">
        <span class="details" for="txtService">Service</span>
        <input name="serviceName" value="{{service.serviceName}}" placeholder="{{service.serviceName}}" readonly></input>
    </div>   
    <div class="input-box">
    <span>Duration: <b class="tw-text-[#FF94BD]">{{service.duration}}</b> minutes</span>
    </div>
    <div class="input-box">
        <div class="tw-flex tw-flex-col tw-justify-center space-x-1 mb-4">
        <span for="txtStartTime" class="tw-bg-white tw-text-black ">Start Time</span>
        <input type="text" name="startTime" id="txtStartTime" value="{{shift.startTime}}" readonly>
        <span for="txtStartTime" class="tw-bg-white tw-text-black ">End Time</span>
        <input type="text" name="endTime" id="txtEndTime" value="{{shift.endTime}}"readonly>
        </div>
    </div>
    <div class="input-box">
    <span for="txtStartTime" class="tw-bg-white tw-text-black ">Available Staff</span>
    <select class="form-select tw-py-2 tw-mt-2" id="inputGroupSelect01" name="inCharge">
        <option selected>Choose...</option>
        {{#each staff}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    </div>
    <span id="alert" class="tw-text-red-500"></span>
    <button type="submit" class="tw-bg-[#F3EC1C] hover:tw-bg-yellow-400 tw-rounded-md tw-font-bold tw-text-center tw-border-0 tw-w-full tw-p-2 transition-colors duration-200"
    >
    Confirm Shifting
    </button>
    </div>
</form>
</div>
