                            {{> rejectBooking bookedServiceIds=_id}}
                            </div>
                        {{else}}
                            <h4 class="tw-text-yellow-500">Staff: {{inCharge.name}}</h4>
                            {{> rejectBooking bookedServiceIds=_id}}
                        {{/unless}}
