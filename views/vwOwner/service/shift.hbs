<div class="tw-border-2 tw-overflow-y-scroll tw-h-screen tw-w-full tw-border-black tw-py-[2%]" style="overflow: scroll; scrollbar-width: none;">   

    <div class="tw-p-[2%] tw-grid tw-grid-cols-1 sm:tw-grid-cols-2 lg:tw-grid-cols-4 tw-gap-4">
        {{#each booking}}
        <div class="card tw-mt-2 tw-shadow-lg" style="width: 18rem; height:22rem">
            <img src="{{service.imageUrl}}" class="card-img-top tw-h-[150px]" alt="...">
            <div class="card-body">
                <h5 class="card-title text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-yellow-300">{{service.serviceName}}</h5>
                <p class="card-text">Staff: <b>{{inCharge.name}}</b></p>
                <p class="card-text">Start Time: <b>{{formatDate shift.startTime}}</b></p>
                <p class="card-text">End Time: <b>{{formatDate shift.endTime}}</b></p>
                <a href="/owner/manageService/shift-staff?id={{_id}}" class=" tw-bg-[#F3EC1C] tw-border-0 tw-w-full tw-text-black btn btn-primary
                 hover:tw-bg-yellow-100 hover:tw-border hover:tw-border-yellow-600">Schedule</a>
            </div>
        </div>
        {{/each}}
    </div>

</div>
