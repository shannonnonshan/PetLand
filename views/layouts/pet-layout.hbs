    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="/css/tailwind.css" rel="stylesheet">
     <link rel="stylesheet" href="../../static/css/cssPet/pet.layout.css">
    {{{_sections.css}}}
</head>

<body>
    <nav class="nav justify-content-center">
        <div class="nav-link">
             <i class="bi bi-house-heart icon-font"></i>
        </div>
        <a
            role="tab"
            id="tab-services"
            aria-controls="tabpanel"
            aria-selected="true"
            href="#"
            class="tw-text-white tw-font-bold nav-link"
            style="text-shadow: 2px 2px 4px rgb(1, 0, 0);"
            onmouseenter="switchTab('services')"
        >
            SERVICES
        </a>
        <a
            role="tab"
            id="tab-pet"
            aria-controls="tabpanel"
            aria-selected="false"
            href="/pet/byCat"
            class="tw-text-white tw-font-bold nav-link"
            style="text-shadow: 2px 2px 4px rgb(1, 0, 0);"
            onmouseenter="switchTab('pet')"
        >
            PET
        </a>
        <a
            role="tab"
            id="tab-about"
            aria-controls="tabpanel"
            aria-selected="false"
            href="#aboutUs"
            style="text-shadow: 2px 2px 4px rgb(1, 0, 0);"
            class="tw-text-white tw-font-bold nav-link"
        >
            ABOUT US
        </a>
        <div class="nav-link">
            <div class="search-container">
                <input type="text" name="search" placeholder="Search..." class="search-input">
                <i class="bi bi-search"></i>      
            </div>
        </div>
        <div class="nav-link icon-font">
             <i class="bi bi-calendar-week icon-font"></i>
        </div>
        <div class="nav-link icon-font">
             <i class="bi bi-person-circle icon-font"></i>
        </div>
    </nav>

    <div style="padding-left: 15%; padding-right: 15%">
        {{{body}}}
    </div>
    
