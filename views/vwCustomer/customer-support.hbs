<div class="container mx-auto p-6">
  <a href="/" class="text-blue-500 hover:text-blue-700">Back to Home</a>
  <h1 class="text-2xl font-bold text-center mb-4">Customer Support</h1>

  <form action="/feedback" method="POST" class="bg-white p-4 rounded shadow-md">
    <div class="form-group">
      <label for="requestType" class="font-semibold text-gray-700">Type of Request</label>
      <select id="requestType" name="type" required class="form-control mt-1 p-2 border rounded w-full">
        <option value="feedback">Feedback</option>
        <option value="complain">Complain</option>
        <option value="help">Help</option>
      </select>
    </div>
    <div class="form-group mt-4">
      <label for="message" class="font-semibold text-gray-700">Message</label>
      <textarea id="message" name="message" class="form-control mt-1 p-2 border rounded w-full" rows="4" placeholder="Write your message here..." required></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3 w-full py-2 bg-blue-500 text-white rounded hover:bg-blue-700 transition">Send</button>
  </form>
</div>

{{!-- Thêm script SweetAlert nếu có thông báo --}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  {{#if success}}
    Swal.fire({
      icon: 'success',
      title: 'Success',
      text: '{{success}}',
      confirmButtonText: 'OK'
    });
  {{/if}}

  {{#if error}}
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: '{{error}}',
      confirmButtonText: 'Try Again'
    });
  {{/if}}
</script>
