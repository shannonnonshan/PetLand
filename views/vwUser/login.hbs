{{#section "signupcss"}}
    <link rel="stylesheet" href="/static/css/cssUser/register.css">
    <link rel="stylesheet" href="/static/css/cssUser/login.css">
{{/section}}
<div class="container">
    <form action="/user/login" method="post">
        <div class="content">
            <div class="title">Login</div> 
            <div class=" d-flex flex-column justify-content-center align-items-center">
            <div class="user-details">
                {{#if showErrors}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Login Failed!</strong> Check your information.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/if}}
                <button type="button" class="btn btn-light btn-connect"
                    onclick="window.location.href='/account/login/githubAuth'">
                    <i class="bi bi-github"></i> Login with GitHub
                </button>
                <button type="button" class="btn btn-light btn-connect"
                    onclick="window.location.href='/user/login/googleAuth'">
                    <i class="bi bi-google"></i> Login with Google
                </button>
                <hr id="line">
                <div class="input-box">
                    <span class="details" for="txtUsername">Username</span>
                    <input type="text" id="txtUsername" name="username" placeholder="Enter your username or email" required>
                </div>
                <div class="input-box">
                    <span class="details" for="txtPassword">Password</span>
                    <input type="password" id="txtPassword" name="raw_password" placeholder="Enter your password" required>
                </div>
                <div class="button">
                    <input type="submit" value="Log in">
                </div>
                <label><a href="/user/forgot-password" class="mt-5 link-underline-dark link-pw">Forgot password?</a></label>
                <div class="d-flex justify-content-center align-items-center">
                    <label>Don't have an account?</label>
                    <label><a href="/user/register" class="link-underline-dark link-pw">Sign Up</a></label>
                </div>
            </div>
        </div>
        </div>
    </form>
</div>