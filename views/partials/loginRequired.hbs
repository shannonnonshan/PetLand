<div
    id="loginModal"
    class="popupModel tw-fixed tw-inset-0 tw-bg-black/50 tw-items-center tw-flex tw-justify-center 
    {{#if showLoginModal}}tw-block{{else}}
    tw-hidden
    {{/if}} tw-z-[500]"
    role="dialog"
    aria-modal="true"
    aria-hidden="true"
    >
    <div class="tw-bg-white  tw-shadow-xl tw-p-6 tw-w-[90%] tw-max-w-md">
        <h2 class="tw-text-lg tw-font-semibold tw-mb-4">Login Required</h2>
        <p class="tw-mb-4">Please login to continue.</p>
        <div class="tw-flex tw-justify-end tw-gap-2">
        <button
            class="tw-stroke-1 tw-px-4 tw-py-2 hover:tw-bg-gray-400"
            onclick="closeModal(true)"
        >
            Cancel
        </button>
        <a
            href="/user/login"
            class="tw-bg-[#FF94BD] tw-text-black tw-px-4 tw-py-2 hover:tw-bg-[#FF94BD]"
        >
            Login
        </a>
        </div>
    </div>
</div>