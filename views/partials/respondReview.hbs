
<button onclick="handleRespondReviewClick(event)" class=" tw-w-[125px] tw-rounded-md tw-text-center tw-border-blue-500 tw-p-2 tw-text-blue-500 tw-bg-transparent hover:tw-bg-gray-400 hover:tw-text-white">
Respond
</button>
<div
    id="respondSuccessModal"
    class="popupModel tw-fixed tw-inset-0  tw-bg-black/50 tw-items-center tw-flex tw-justify-center 
    {{#if showSuccessModal}}tw-block{{else}}
    tw-hidden
    {{/if}} tw-z-[500]"
    role="dialog"
    aria-modal="true"
    aria-hidden="true"
    >
    <div id="mainContent" class="tw-bg-white  tw-shadow-xl tw-p-6 tw-w-[100%] tw-max-w-lg tw-h-[50%]">
        <h2 class="tw-text-lg tw-font-semibold tw-mb-4">Your Response</h2>
       <form action="/staff/manageService/response-review" method="POST">
        <div class="tw-flex tw-flex-col tw-w-full tw-gap-2 tw-justify-center tw-items-center">
          <input type="hidden" name="reviewId" value="{{reviewId}}">
          <textarea type="text"class="tw-h-[250px]" name="response">
            {{#if response}}
            {{response}}
            {{/if}}
          </textarea>
          <div>
            <button class=" tw-rounded-md tw-text-center tw-border-0 tw-p-2 tw-text-white tw-bg-red-400 hover:tw-bg-gray-400 hover:tw-text-white">
            Respond
            </button>
             <button
            class="tw-rounded-md tw-stroke-1 tw-px-4 tw-py-2 hover:tw-bg-gray-400"
            onclick="closeModal()">
            Cancel
            </button>
            </div>
        </form>
        </div>
        </div>
    </div>
